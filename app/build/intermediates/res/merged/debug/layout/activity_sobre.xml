<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sobre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.catanduvamobile.catanduvamobile.ActivitySobre">

    <TextView
        android:text="Sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:id="@+id/titulo_sobre" />

    <TextView
        android:text="Aplicativo criado inicialmente para o Trabalho de Conclusão de Curso de Ciência da Computação do IMES - Instituto Municipal Ensino Superior de Catanduva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:id="@+id/texto_sobre"
        android:layout_below="@+id/titulo_sobre"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="CATANDUVA MOBILE v1.0 BETA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:id="@+id/nome_app"
        android:layout_below="@+id/texto_sobre"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:text="Desenvolvido por: José Henrique Fernandes Leite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome_desenvolvedor"
        android:layout_marginBottom="33dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_above="@+id/email"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Email: josehenriquefernandesleite@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
