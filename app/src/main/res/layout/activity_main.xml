<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_catanduva"
    tools:context="com.example.catanduvamobile.catanduvamobile.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/financeiras"
        android:background="@drawable/icone_financeiro"
        android:onClick="startActivityFinanceiras"
        android:layout_alignBaseline="@+id/saude"
        android:layout_alignBottom="@+id/saude"
        android:layout_alignStart="@+id/utilidade_publica" />

    <Button
        android:background="@drawable/icone_utilidadepublica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/utilidade_publica"
        android:onClick="startActivityUtilidadePublica"
        android:layout_alignTop="@+id/compras"
        android:layout_alignStart="@+id/transportes" />

    <Button
        android:text="OFERTAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button29"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:background="#aa34"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:fontFamily="cursive"
        android:typeface="monospace"
        android:textColor="?android:attr/panelColorForeground"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/financeiras"
        android:layout_centerHorizontal="true"
        android:onClick="startActivityOfertas"/>

    <Button
        android:background="#aa34"
        android:text="HISTÃ“RIA DA CIDADE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botao_historia_da_cidade"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:typeface="monospace"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:fontFamily="cursive"
        android:onClick="startActivityHistoriaDaCidade"
        android:textColor="?android:attr/panelColorForeground"
        android:layout_marginBottom="9dp"
        android:textStyle="normal|bold|italic"
        android:layout_above="@+id/botao_sobre_o_app"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alimentacao"
        android:background="@drawable/icone_alimentacao"
        android:onClick="startActivityAlimentacao"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_above="@+id/button29"
        android:layout_alignStart="@+id/compras" />

    <TextView
        android:text="MENU\nPRINCIPAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto_menu_principal"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="9dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/transportes" />

    <Button
        android:text="SOBRE O APP"
        android:background="#aa34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botao_sobre_o_app"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:fontFamily="cursive"
        android:typeface="monospace"
        android:onClick="startActivitySobre"
        android:textColor="?android:attr/panelColorForeground"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transportes"
        android:background="@drawable/icone_transportes"
        android:onClick="startActivityTransportes"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/utilidade_publica"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entretenimento"
        android:background="@drawable/icone_entretenimento"
        android:onClick="startActivityEntretenimento"
        android:layout_alignBaseline="@+id/transportes"
        android:layout_alignBottom="@+id/transportes"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/icone_compras"
        android:id="@+id/compras"
        android:onClick="startActivityCompras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:visibility="visible"
        android:elevation="24dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAllCaps="false"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/alimentacao"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/icone_saude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saude"
        android:onClick="startActivitySaude"
        android:layout_marginBottom="64dp"
        android:layout_above="@+id/botao_historia_da_cidade"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/esporte_e_lazer"
        android:background="@drawable/icone_esporteelazer"
        android:onClick="startActivityEsporteLazer"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_alignBaseline="@+id/transportes"
        android:layout_alignBottom="@+id/transportes"
        android:layout_alignEnd="@+id/hospedagem" />

    <Button
        android:background="@drawable/icone_hospedagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hospedagem"
        android:onClick="startActivityHospedagem"
        android:layout_alignBaseline="@+id/utilidade_publica"
        android:layout_alignBottom="@+id/utilidade_publica"
        android:layout_alignParentStart="true" />


</RelativeLayout>
