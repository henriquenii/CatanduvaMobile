<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_onibus_urbano"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_catanduva"
    tools:context="com.example.catanduvamobile.catanduvamobile.ActivityOnibusUrbano">

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/botao_voltarParaTransportes"
        android:onClick="startActivityTransportes"
        android:background="@drawable/botao_voltar"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/botao_voltar_ao_menu_principal"
        android:id="@+id/botao_voltar_ao_menu_principal"
        android:onClick="startMainActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rotas_onibus"
        android:background="@drawable/rotas_onibus"
        android:onClick="startActivityOnibusUrbanoRotas"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/terminal_urbano"
        android:background="@drawable/terminal_urbano"
        android:onClick="startActivityOnibusUrbanoTerminalUrbano"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/rotas_onibus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="MENU\nÃ”NIBUS\nURBANO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto_onibus_urbano"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:fontFamily="casual"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp" />

</RelativeLayout>
